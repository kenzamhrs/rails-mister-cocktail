<div class="banner" style="background-image: url('<%= image_path 'cocktail.png' %>');">
  <div class="banner-content">
    <h1>Signature Cocktails</h1>
    <br>
    <a><%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-outline-light" %></a>
  </div>
</div>
<br>
<div class="card">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= image_path'olfashioned-new.png' %>');">
          <div class="card-description">
            <h2><%= cocktail.name %></h2>
          </div>
          <%= link_to "", cocktail_path(cocktail), class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>
