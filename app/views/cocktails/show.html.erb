<div class="container">

  <h1><%= @cocktail.name %></h1>
  <br>
  <p><%= link_to "Back to all cocktails", root_path %></p>
  <p> <%= render "doses/new", cocktail: @cocktail, dose: @dose %></p>

  <div class="row">
    <div class="col-sm-12 col-md-6">
      <br>
      <h3>Recipe</h3>
      <br>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
          </thead>
          <% @cocktail.doses.each do |dose| %>
            <tr>
              <td><%= dose.ingredient.name %></td>
              <td><%= dose.description %></td>
              <td>
                <%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fa fa-trash destroy_dose"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
